@model Financial_List.Models.Product

@{
    ViewData["Title"] = "刪除產品";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductNo" />
    <p>確定要刪除這筆資料嗎？</p>
    <div class="mb-2">
        <strong>產品編號：</strong> @Model.ProductNo <br />
        <strong>產品名稱：</strong> @Model.ProductName
    </div>
    <button type="submit" class="btn btn-danger">刪除</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>
