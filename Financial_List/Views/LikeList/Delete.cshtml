@model Financial_List.Models.LikeList

@{
    ViewData["Title"] = "刪除喜好商品";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SN" />
    <p>確定要刪除這筆資料嗎？</p>
    <div class="mb-2">
        <strong>產品編號：</strong> @Model.ProductNo <br />
        <strong>購買數量：</strong> @Model.OrderAmount
    </div>
    <button type="submit" class="btn btn-danger">刪除</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>
